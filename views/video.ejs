<div id="danmup"  style="left: 50%;margin-left:-400px;top:100px">


</div>


<div class="center commentbox">
    <div class="ui labeled button" tabindex="0">
        <a class="ui red button" id="likeImage"><i class="heart icon"></i> Like </a>
        <a class="ui basic red left pointing label" id="like">
            1,048
        </a>
    </div>
    <div class="ui labeled button" tabindex="0">
        <a class="ui basic blue button" id="unlikeImage"><i class="fork icon"></i> Unlike </a>
        <a class="ui basic left pointing blue label" id="unlike">
            1,048
        </a>
    </div>
    <div class="ui grid">
        <div class="four wide column"></div>
        <form class="ui form segment" method="post" enctype="multipart/form-data" action="http://localhost:3000/video/5caf0cdab51304215c814d27/like">
            <input type="submit" class="ui button fluid" value="like">
        </form>
        <form class="ui form segment" method="post" enctype="multipart/form-data" action="http://localhost:3000/video/5caf0cdab51304215c814d27/unlike">
            <input type="submit" class="ui button fluid" value="unlike">
        </form>

        <form class="ui form segment" method="post" enctype="multipart/form-data" action="http://localhost:3000/video/5caf0cdab51304215c814d27/comment">
            <div class="field required">
                <label>Comment</label>
                <input type="text" name="content">
            </div>
            <input type="submit" class="ui button fluid" value="send comment">
        </form>
        <form class="ui form segment" method="post" enctype="multipart/form-data" action="http://localhost:3000/video/5caf0cdab51304215c814d27/removecomment">
            <div class="field required">
                <label>Comment Id</label>
                <input type="text" name="commentId">
            </div>
            <input type="submit" class="ui button fluid" value="remove comment">
        </form>

    </div>
</div>

